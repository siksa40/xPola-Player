        `;

        // تحويل بيانات M3U إلى مصفوفة من القنوات
        function parseM3U(data) {
            const lines = data.trim().split("\n");
            let channels = [];
            for (let i = 0; i < lines.length; i++) {
                if (lines[i].startsWith("#EXTINF")) {
                    let logo = lines[i].match(/tvg-logo="(.*?)"/);
                    let name = lines[i].split(",")[1];
                    let url = lines[i + 1]?.trim();

                    let drm = null;
                    if (url.includes("|drm-info=clearkey|")) {
                        let parts = url.split("|drm-info=clearkey|");
                        url = parts[0];
                        drm = parts[1];
                    }

                    channels.push({
                        name: name,
                        logo: logo ? logo[1] : "",
                        url: url,
                        drm: drm
                    });
                }
            }
            return channels;
        }

        function displayChannels() {
            const channels = parseM3U(m3uData);
            const container = document.getElementById("channels");
            container.innerHTML = "";
            channels.forEach(channel => {
                const div = document.createElement("div");
                div.className = "channel";
                div.tabIndex = 0;
                div.innerHTML = `
                    <img class='logo' src='${channel.logo}' /><br>
                    <strong>${channel.name}</strong>
                `;
                div.onclick = () => playChannel(channel.url, channel.drm);
                container.appendChild(div);
            });
        }

        function playChannel(url, drm) {
            let intentUrl;
            if (drm) {
                let fullUrl = encodeURIComponent(url + "|drm-info=clearkey|" + drm);
                intentUrl = `intent://${fullUrl}#Intent;scheme=xmtv;package=com.xpola.player;end`;
            } else {
                let fullUrl = encodeURIComponent(url);
                intentUrl = `intent://${fullUrl}#Intent;scheme=xmtv;package=com.xpola.player;end`;
            }
            window.location.href = intentUrl;
        }

        displayChannels();
    </script>
